[Unit]
Description=Minecraft Server + playit.gg (Docker)
After=docker.service network-online.target
Wants=docker.service network-online.target

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/home/elijah/Downloads/Minecraft_Server
ExecStart=/usr/bin/docker compose up -d
ExecStop=/usr/bin/docker compose down
# Must run as root to access Docker daemon (or add User to docker group)

[Install]
WantedBy=multi-user.target
